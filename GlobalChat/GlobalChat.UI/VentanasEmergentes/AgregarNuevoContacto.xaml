<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GlobalChat.UI.VentanasEmergentes.AgregarNuevoContacto"
             Title="AgregarNuevoContacto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border BackgroundColor="#382745" Margin="20" WidthRequest="600" HorizontalOptions="Start">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="50"/>
            </Border.StrokeShape>
            <Grid>
                <Label Grid.Row="0" Text="Añadir nuevo contacto" FontAttributes="Bold" FontFamily="Arial" TextColor="#FEFFFF"/>
                <Entry Grid.Row="1" Text="Puedes añadir contactos escribiendo su E-mail" BackgroundColor="#DCD6DF" IsPassword="False" FontFamily="Arial" TextColor="#0D0D0D"/>
                <Button Grid.Row="2" Text="Agregar" BackgroundColor="#655274" TextColor="#FEFFFF" CornerRadius="30" FontFamily="Arial"/>
            </Grid>
        </Border>
    </Grid>
</ContentPage>