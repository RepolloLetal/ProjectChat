<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GlobalChat.UI.VentanasEmergentes.AgregarNuevoContacto"
             Title="AgregarNuevoContacto">
    <Grid>
        
        <Border BackgroundColor="#382745" Margin="20" WidthRequest="500" HeightRequest="350" HorizontalOptions="Center">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="50"/>
            </Border.StrokeShape>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Text="Añadir nuevo contacto" FontAttributes="Bold" FontFamily="Arial" TextColor="#FEFFFF" HorizontalOptions="Center" Margin="30" FontSize="20"/>
                <Entry Grid.Row="1" Text="Puedes añadir contactos escribiendo su nombre de usuario" BackgroundColor="#DCD6DF" IsPassword="False" FontFamily="Arial" TextColor="#636363" Margin="15" FontAttributes="Bold"/>
                <Button Grid.Row="2" Text="Agregar" TextColor="#FEFFFF" CornerRadius="30" FontFamily="Arial" Margin="15" FontAttributes="Bold"/>
            </Grid>
        </Border>
    </Grid>
</ContentPage>