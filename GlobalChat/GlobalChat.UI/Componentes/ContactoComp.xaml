<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GlobalChat.UI.Componentes.ContactoComp"
             x:Name="ContactoComponente">

    <Grid x:Name="DatosGridComp" BackgroundColor="#F6E9F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Frame   Grid.Row="0" Grid.RowSpan="2">
            <Ellipse Grid.Row="0" Grid.RowSpan="2" HeightRequest="30" WidthRequest="30" Fill="White" HorizontalOptions="Start"/>
        </Frame>
        <Frame>
            <Image Source="{Binding IconUsuario}" Grid.Row="0" Grid.RowSpan="2" HeightRequest="20" WidthRequest="20" HorizontalOptions="Start"/>
        </Frame>
        <Label Text="fcdfdsfdsfs" FontFamily="Arial" FontAttributes="Bold" FontSize="20" TextColor="DarkGray" Grid.Row="0" Grid.Column="1" TranslationY="20" Margin="5"/>
        <Label Text=" dfdsfsdfsdf" FontFamily="Arial" FontAttributes="Bold" FontSize="15" TextColor="DarkGray" Grid.Row="1" Grid.Column="1" Margin="5"/>
        <Image Source="{Binding IconFavorito}" Grid.Row="1" Grid.Column="2" Margin="5"/>
    </Grid>
</ContentView>
